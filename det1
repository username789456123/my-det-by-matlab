function d = det1(A)

[m,n] = size(A);
if m==n
    if n>1
        d = 0;
        for i=1:n
            A1 = A;
            A1(1,:) = [];
            A1(:,i) = [];                         
            d = d + (-1)^(1+i)*A(1,i)*det1(A1);  
        end
    else
        d = A(1,1);                                
    end          
else
    error('这不是方阵！')
end
